<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.10/angular.min.js"></script>
<script>
    function VisitsController($scope, $http) {
        $http.get('visits.json').success( function(data, status, headers, config) {
            $scope.visits = data;
        });

        $scope.order = 'visitdate';

        $scope.click = function (order){
            $scope.order = order;
            console.log(order);
        }

        $scope.searchText = '';
    }
</script>

<h2>Visits</h2>

<div ng-app ng-controller="VisitsController">
  search:  <input ng-model="searchText">

  <table class="table table-hover">
    <thead>
    <th> <a ng-click="click('visitdate')">name</a> </th>
    
    </thead>
    <tr ng-repeat="visit in visits| orderBy:order | filter:searchText">
    	<td>{{visit.visitdate}}</td>
    	<td>{{visit.user.name}}</td>
    	<td>{{visit.store.name}}</td>
    </tr>
  </table>

</div>