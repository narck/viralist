<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :company %><br>
    <%= f.select :company_id, options_from_collection_for_select(@companies, :id, :name, selected: @store.id) %>
  </div>
  <div class="field">
    <%= f.label :contact %><br>
    <%= f.select :contact_id, options_from_collection_for_select(@contacts, :id, :to_s, selected: @store.id) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
