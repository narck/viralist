<h1>Listing companies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of stores</th>
      <th>Contact</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.stores.count %></td>
        <td><%= link_to company.contact.to_s, company.contact %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-xs btn-primary"%></td>
        <td><%= link_to 'Destroy', company, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: "btn btn-md btn-success" %>
